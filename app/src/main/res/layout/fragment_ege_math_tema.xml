<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.egepredmet.Ege_math_tema">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent" android:layout_height="match_parent"><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10sp"
                android:text="Производная и графики функции" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left"
                android:paddingLeft="10sp"
                android:text="Векторы" />
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Диаграммы"
                android:gravity="left"
                android:paddingLeft="10sp"/>
            <Button
                    android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Округление"
                android:gravity="left"
                android:paddingLeft="10sp"/>
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Операции с числами"
                android:gravity="left"
                android:paddingLeft="10sp"/>

        </LinearLayout></ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>